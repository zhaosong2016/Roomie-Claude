/* pages/form/form.wxss */
.container {
  padding: 20px;
}

.page-title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 25px;
  text-align: center;
}

.form-section {
  margin-bottom: 25px;
}

.label {
  display: block;
  margin-bottom: 10px;
  font-weight: bold;
  font-size: 18px;
}

.sub-label {
  display: block;
  margin-top: 15px;
  margin-bottom: 8px;
  font-size: 17px;
  font-weight: bold;
  color: #333;
}

.input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
}

.picker {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  background: #fff;
  font-size: 16px;
  cursor: pointer;
  min-height: 40px;
  display: flex;
  align-items: center;
}

radio-group label {
  display: block;
  margin: 5px 0;
  font-size: 16px;
}

radio {
  transform: scale(0.8);
  margin-right: 5px;
}

.radio-block {
  display: flex;
  align-items: center;
  margin: 5px 0;
  padding: 8px;
  background: #f5f5f5;
  border-radius: 4px;
  font-size: 16px;
  line-height: 1.4;
}

.divider {
  height: 1px;
  background: #e0e0e0;
  margin: 20px 0;
}

.agreement {
  display: flex;
  align-items: center;
  font-size: 16px;
}

.link {
  color: #007aff;
  text-decoration: underline;
}

.submit-btn {
  margin-top: 30px;
  background-color: #007aff;
  color: white !important;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 15rpx 40rpx rgba(0, 122, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 协议弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 85%;
  max-height: 70vh;
  background: white;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 20px;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.modal-body {
  flex: 1;
  padding: 20px;
  overflow-y: auto;
}

.agreement-text {
  text-align: left;
  line-height: 1.8;
}

.agreement-item {
  margin-bottom: 15px;
  font-size: 15px;
  color: #333;
}

.modal-btn {
  margin: 15px;
  background-color: #007aff;
  color: white;
  border-radius: 8px;
  font-size: 16px;
}
