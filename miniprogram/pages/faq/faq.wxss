.faq-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

.faq-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.faq-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.faq-item {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.faq-question {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx 30rpx;
  background: #ffffff;
}

.question-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.question-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.faq-answer {
  background: #f8f9fa;
  padding: 20rpx 30rpx 30rpx 30rpx;
}

.answer-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #666666;
  white-space: pre-line;
}
