/* pages/result/result.wxss */
.page-wrapper {
  position: relative;
  min-height: 100vh;
  width: 100%;
  overflow: hidden;
}

/* 背景图片 */
.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 内容层 */
.content-layer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 结果卡片 */
.result-card {
  background: rgba(255, 255, 255, 0.95);
  width: 100%;
  padding: 60rpx 40rpx;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

/* 信息项 */
.info-item {
  background: #f5f5f5;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 16rpx;
  text-align: left;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 等待状态文字 */
.message {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin: 30rpx 0;
  line-height: 1.6;
}

.tip {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 50rpx;
}

/* 按钮 */
.main-btn {
  background-color: #007aff;
  color: #ffffff !important;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  width: 100%;
}

.secondary-btn {
  flex: 1;
  background-color: #007aff;
  color: #ffffff !important;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.danger-btn {
  flex: 1;
  background-color: #ff3b30;
  color: #ffffff !important;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 部分匹配列表 */
.partial-list {
  width: 100%;
  margin: 30rpx 0;
}

.partial-item {
  background: #f5f5f5;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 16rpx;
  text-align: left;
}

.partial-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.partial-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.partial-wechat {
  font-size: 28rpx;
  color: #666;
}

.partial-dates,
.partial-overlap {
  margin: 10rpx 0;
  font-size: 30rpx;
}

.date-label,
.overlap-label {
  color: #999;
}

.date-value {
  color: #333;
}

.overlap-value {
  color: #007aff;
  font-weight: bold;
}

/* 日期不匹配警告 */
.date-warning {
  background: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
  text-align: left;
}

.warning-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.warning-text {
  font-size: 28rpx;
  color: #856404;
  line-height: 1.6;
  flex: 1;
}

/* 许愿链接 */
.wish-link {
  text-align: center;
  font-size: 28rpx;
  color: #FF6B6B;
  text-decoration: underline;
  margin-top: 30rpx;
  padding-bottom: 40rpx;
}
