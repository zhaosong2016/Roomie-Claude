/* pages/create/create.wxss */
.container {
  padding: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px;
  text-align: center;
}

.form-section {
  margin-bottom: 20px;
}

.label {
  display: block;
  margin-bottom: 10px;
  font-weight: bold;
}

.input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.picker {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  background: #fff;
}

.hint {
  display: block;
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.submit-btn {
  margin-top: 30px;
  background-color: #007aff;
  color: white;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 15rpx 40rpx rgba(0, 122, 255, 0.4);
}

.result-section {
  margin-top: 40px;
  padding: 20px;
  background: #f0f9ff;
  border-radius: 8px;
  text-align: center;
}

.result-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #007aff;
}

.code-display {
  font-size: 32px;
  font-weight: bold;
  color: #007aff;
  margin: 20px 0;
  letter-spacing: 2px;
}

.result-hint {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 20px;
}

.copy-btn {
  background-color: #28a745;
  color: white;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.back-btn {
  margin-top: 10px;
  background-color: #6c757d;
  color: white;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}
