/* pages/wish/wish.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 80rpx;
}

.radio-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin: 10rpx 0;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 10rpx 0;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.type-text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
}

.radio-content {
  flex: 1;
  margin-left: 15rpx;
}

.radio-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.radio-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #007aff !important;
  color: #ffffff !important;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 122, 255, 0.4);
  border: none;
  line-height: 90rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background-color: #cccccc !important;
  box-shadow: none;
  color: #ffffff !important;
}

.tip {
  text-align: center;
  margin-top: 30rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}
